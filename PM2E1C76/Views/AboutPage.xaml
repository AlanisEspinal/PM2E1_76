<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E1C76.Views.AboutPage"
             xmlns:vm="clr-namespace:PM2E1C76.ViewModels"
             Title="{Binding Title}">



    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#17A589" />
                
                <Setter Property="Margin" Value="15" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Image x:Name="foto" WidthRequest="100" HeightRequest="200"/>
        <Button x:Name="btnfoto" Text="Tomar Foto" Clicked="btnfoto_Clicked"/>
        <Entry x:Name="EntryLongitud" TextColor="Black" IsEnabled="False" Placeholder="Longitud"/>
        <Entry x:Name="EntryLatitud" TextColor="Black" IsEnabled="False" Placeholder="Latitud"/>
        <Entry x:Name="EntryDescipcion" Placeholder="Descripcion"/>
        <Button x:Name="btnguardar"  Text="Guardar" Clicked="btnguardar_Clicked"/>
        <Button x:Name="btnlista" Text="Lista lugares" Clicked="btnlista_Clicked"/>
        <Button x:Name="btnsalir" Text="Salir" Clicked="btnsalir_Clicked"/>
    </StackLayout>




</ContentPage>
